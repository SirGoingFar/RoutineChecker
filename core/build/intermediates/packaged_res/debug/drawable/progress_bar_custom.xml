<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadius="@dimen/dimen_20dp"
        android:shape="ring"
        android:thickness="@dimen/padding_textview_small"
        android:useLevel="false">

        <size
            android:width="@dimen/dimen_48dp"
            android:height="@dimen/dimen_48dp" />

        <gradient
            android:centerColor="#80ec407a"
            android:centerY="0.5"
            android:endColor="#ffe91e63"
            android:startColor="#00f06292"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>